<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:animateLayoutChanges="true">

    <ImageView
        android:id="@+id/lwj_player_controller_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/lwj_player_controller_top"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/lwj_player_controller_top_backtrack"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/lwj_player_backtrack"/>

        <TextView
            android:id="@+id/lwj_player_controller_top_title"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#fff"
            android:singleLine="true"
            android:ellipsize="end"/>
        <ImageView
            android:id="@+id/lwj_player_controller_top_electric"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/lwj_player_electric100"/>
        <ImageView
            android:id="@+id/lwj_player_controller_top_more"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/lwj_player_more"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/lwj_player_controller_lock"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="center"
        android:src="@drawable/lwj_player_lock_off"/>

    <ImageView
        android:id="@+id/lwj_player_controller_button"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lwj_player_start"/>

    <LinearLayout
        android:id="@+id/lwj_player_controller_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/lwj_player_controller_bottom_voice"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/lwj_player_voice_on"/>
        <TextView
            android:id="@+id/lwj_player_controller_bottom_current"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#fff"
            android:text="00:00"/>
        <SeekBar
            android:id="@+id/lwj_player_controller_bottom_seek_bar"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxHeight="2dp"
            android:progress="50"
            android:secondaryProgress="70"
            android:thumb="@drawable/lwj_player_seek_bar"
            android:progressDrawable="@drawable/lwj_player_seek_bar_progress"/>
        <TextView
            android:id="@+id/lwj_player_controller_bottom_total"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#fff"
            android:text="00:00"/>

        <TextView
            android:id="@+id/lwj_player_controller_bottom_speed"
            android:gravity="center"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textColor="#fff"
            android:text="1.0x"/>

        <ImageView
            android:id="@+id/lwj_player_controller_bottom_screen"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/lwj_player_full_screen"/>
    </LinearLayout>
</RelativeLayout>