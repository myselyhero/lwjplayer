<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:animateLayoutChanges="true">

    <ImageView
        android:id="@+id/lwj_player_common_controller_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/lwj_player_common_controller_button"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lwj_player_start"/>

    <LinearLayout
        android:id="@+id/lwj_player_common_controller_window"
        android:gravity="center"
        android:visibility="gone"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="@drawable/lwj_player_controller_window_background"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/message_item_content_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="14sp"
            android:text="正在缓冲..."/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lwj_player_common_controller_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/lwj_player_common_controller_bottom_voice"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/lwj_player_voice_on"/>
        <TextView
            android:id="@+id/lwj_player_common_controller_bottom_current"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#fff"
            android:text="00:00"/>
        <SeekBar
            android:id="@+id/lwj_player_common_controller_bottom_seek_bar"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxHeight="2dp"
            android:progress="0"
            android:secondaryProgress="0"
            android:thumb="@drawable/lwj_player_seek_bar"
            android:progressDrawable="@drawable/lwj_player_seek_bar_progress"/>
        <TextView
            android:id="@+id/lwj_player_common_controller_bottom_total"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#fff"
            android:text="00:00"/>
    </LinearLayout>
</RelativeLayout>