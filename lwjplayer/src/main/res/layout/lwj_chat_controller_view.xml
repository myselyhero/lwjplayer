<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:id="@+id/lwj_player_chat_thumbnail"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/lwj_player_chat_btn"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lwj_chat_player"/>

    <LinearLayout
        android:id="@+id/lwj_player_chat_controller_background"
        android:layout_above="@id/lwj_player_chat_function_background"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lwj_player_chat_controller_current"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#fff"
            android:text="00:00"/>
        <SeekBar
            android:id="@+id/lwj_player_chat_controller_seek"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxHeight="2dp"
            android:progress="0"
            android:secondaryProgress="0"
            android:thumb="@drawable/lwj_chat_player_seek_bar_thumb"
            android:progressDrawable="@drawable/lwj_chat_player_seek_bar_progress"/>
        <TextView
            android:id="@+id/lwj_player_chat_controller_duration"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#fff"
            android:text="00:00"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lwj_player_chat_function_background"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/lwj_player_chat_function_backtrack"
            android:background="@drawable/lwj_chat_icon_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lwj_chat_backtrack"/>
        <ImageView
            android:id="@+id/lwj_player_chat_function_share"
            android:layout_toStartOf="@id/lwj_player_chat_function_collect"
            android:background="@drawable/lwj_chat_icon_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lwj_chat_share"/>
        <ImageView
            android:id="@+id/lwj_player_chat_function_collect"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/lwj_player_chat_function_download"
            android:background="@drawable/lwj_chat_icon_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lwj_chat_collect"/>
        <ImageView
            android:id="@+id/lwj_player_chat_function_download"
            android:layout_alignParentRight="true"
            android:background="@drawable/lwj_chat_icon_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lwj_chat_download"/>
    </RelativeLayout>
</RelativeLayout>